							<span class="focus-input100"></span>
						</div>
						<br>
						{{ elIf('<span class="text-danger">$self</span>', getErrorFor('employId'), hasErrorFor('employId')) }}
					</div>

					<div class="m-b-10" style="width:100%">
						<div class="wrap-input100" data-validate="email is required">
							<span class="label-input100">Email</span>
							<input class="input100" type="email" name="email" value="{{ old('email') }}" required>
							<span class="focus-input100"></span>
						</div>
						<br>
						{{ elIf('<span class="text-danger">$self</span>', getErrorFor('email'), hasErrorFor('email')) }}
					</div>

					<div class="m-b-10" style="width:100%">
						<div class="wrap-input100 validate-input" data-validate = "Password is required">

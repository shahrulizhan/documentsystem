							<span class="focus-input100"></span>
						</div>
						<br>
						{{ elIf('<span class="text-danger">$self</span>', getErrorFor('username'), hasErrorFor('username')) }}
					</div>

					<div class="m-b-10" style="width:100%">
						<div class="wrap-input100 validate-input" data-validate="employee id is required">
